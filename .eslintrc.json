{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"react-app",
		"react-app/jest",
		"prettier",
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-restricted-imports": [
			"error",
			{
				"patterns": ["src/features/*/*"],
			},
	],
	}
}
